{
    "name": "VGG_Jabbar",
    "n_gpu": 1,

    "arch": {
        "type": "VGG_Jabbar",
        "args": {
            "num_classes": 5,
            "freeze_cnn": false,
	        "pretrained": true
        }
    },

    "train_set": {
        "type": "EyePacsDataset",
        "args": {
            "annotations_file": "../scratch/train_aug_labels.csv",
            "img_dir": "../scratch/proc256/"
        }
    },
    "valid_set": {
        "type": "EyePacsDataset",
        "args": {
            "annotations_file": "../scratch/train_aug_labels.csv",
            "img_dir": "../scratch/proc256/"
        }
    },

    "data_loader": {
        "type": "EyePacsDataLoader",
        "args":{
            "batch_size": 32,
            "shuffle": true,
            "num_workers": 4
        }
    },

    "optimizer": [
        {
            "type": "RAdam",
            "args":{
                "lr": 0.001
            }
        }, {
            "type": "RAdam",
            "args":{
                "lr": 0.0001
            }
        }, {
            "type": "SGD",
            "args":{
                "lr": 0.001
            }
        }, {
            "type": "RMSprop",
            "args":{
                "lr": 0.001
            }
        }
    ],
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": [{
            "type": "ReducelROnPlateau",
            "args": {
                "mode": "min",
                "factor": 0.1,
                "patience": 5
            }
        }, {
            "type": "StepLR",
            "args": {
                "mode": "min",
                "factor": 0.1,
                "patience": 3
            }
        }, {
            "type": "ConstantLR",
            "args": {
                "mode": "min",
                "factor": 0.1,
                "patience": 3
            }
        }, {
            "type": "ConstantLR",
            "args": {
                "mode": "min",
                "factor": 0.1,
                "patience": 3
            }
        }
    ],
    "trainer": {
        "epochs": 50,

        "save_dir": "saved/",
        "save_period": 5, 
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
