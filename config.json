{
    "name": "VGG_Jabbar",
    "n_gpu": 1,

    "arch": {
        "type": "VGG_Jabbar",
        "args": {
            "num_classes": 5,
            "freeze_cnn": false,
	        "pretrained": true
        }
    },

    "train_set": {
        "type": "EyePacsDataset",
        "args": {
            "annotations_file": "../scratch/train_aug_labels_stratified.csv",
            "img_dir": "../scratch/train256/"
        }
    },
    "valid_set": {
        "type": "EyePacsDataset",
        "args": {
            "annotations_file": "../scratch/train_aug_labels_stratified.csv",
            "img_dir": "../scratch/train256/"
        }
    },
    "test_set": {
        "type": "DDRDataset",
        "args": {
            "annotations_file": "/home/miqueias/DDR-dataset/DR_grading/test.txt",
            "img_dir": "/home/miqueias/DDR-dataset/DR_grading/test"
        }
    },

    "data_loader": {
        "type": "DDRDataLoader",
        "args":{
            "batch_size": 32,
            "shuffle": true,
            "num_workers": 4
        }
    },

    "optimizer": {
        "type": "RAdam",
        "args":{
            "lr": 0.001
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "ReducelROnPlateau",
        "args": {
            "mode": "min",
            "factor": 0.1,
	        "patience": 3
        }
    },
    "trainer": {
        "epochs": 300,

        "save_dir": "saved/",
        "save_period": 3, 
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 6,

        "tensorboard": true
    }
}
