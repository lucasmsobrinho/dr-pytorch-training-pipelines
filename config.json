{
    "name": "VGG_Jabbar",
    "n_gpu": 1,

    "arch": {
        "type": "VGG_Jabbar",
        "args": {"num_classes": 5}
    },
    "data_loader": {
        "type": "DDRDataLoader",
        "args":{
            "batch_size": 16,
            "shuffle": true,
            "num_workers": 1,
            "annotations_file": "../scratch/trainAugLabels.csv",
            "img_dir": "../scratch/train_proc/"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 300,

        "save_dir": "saved/",
        "save_period": 20, 
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
