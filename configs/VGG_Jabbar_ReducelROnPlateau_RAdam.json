{
    "name": "VGG_Jabbar_ReducelROnPlateau_RAdam",
    "n_gpu": 1,

    "arch": {
        "type": "VGG_Jabbar",
        "args": {
            "num_classes": 5,
            "freeze_cnn": false,
	        "pretrained": true
        }
    },

    "train_set": {
        "type": "EyePacsDataset",
        "args": {
            "annotations_file": "../scratch/train_aug_labels_stratified.csv",
            "img_dir": "../scratch/train256/"
        }
    },
    "valid_set": {
        "type": "EyePacsDataset",
        "args": {
            "annotations_file": "../scratch/train_aug_labels_stratified.csv",
            "img_dir": "../scratch/train256/"
        }
    },

    "data_loader": {
        "type": "EyePacsDataLoader",
        "args":{
            "batch_size": 32,
            "shuffle": true,
            "num_workers": 4
        }
    },

    "optimizer": {
        "type": "RAdam",
        "args":{
            "lr": 0.0001
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "ReducelROnPlateau",
        "args": {
            "mode": "min",
            "factor": 0.1,
            "patience": 5
        }
    },
    "trainer": {
        "epochs": 50,

        "save_dir": "saved/",
        "save_period": 5, 
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}